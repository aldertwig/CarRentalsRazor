@page
@model CarRentalsRazor.Pages.Admins.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page-handler="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginRequest.Email" class="control-label"></label>
                <input asp-for="LoginRequest.Email" class="form-control" />
                <span asp-validation-for="LoginRequest.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginRequest.Password" class="control-label"></label>
                <input asp-for="LoginRequest.Password" type="password" class="form-control" />
                <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <br>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert-danger">
            <strong>Error!</strong> @Model.ErrorMessage
            <button class="close alert" onclick="$(this).parent().remove();">Close</button>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
