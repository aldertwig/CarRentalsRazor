@page
@model CarRentalsRazor.Pages.Bookings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<div class="row">
    <h2>Booking</h2>
    <h3>Are you sure you want to delete this?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.CarId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.CarId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.RentalStart)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.RentalStart)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Booking.RentalEnd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Booking.RentalEnd)
        </dd>
        <form method="post">
            <button type="submit"><i class="fa fa-close" style="color:red"></i> Delete</button>
            <a asp-page="./Index">Back to List</a>
        </form>
    </dl>
    <br>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert-danger">
            <strong>Error!</strong> @Model.ErrorMessage
            <button class="close alert" onclick="$(this).parent().remove();">Close</button>
        </div>
    }
</div>
