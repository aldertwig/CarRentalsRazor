@page
@model CarRentalsRazor.Pages.Cars.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Car Details</h1>
<div class="row">
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.RentPerDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.RentPerDay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Available)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Available)
        </dd>
        <dd class="col-sm-10">
            @await Component.InvokeAsync("CarPictures", new { id = Model.Car.Id })
        </dd>
        <div>
            @if (!Models.CurrentUser.IsAdmin) { <a asp-page="/Bookings/Create" asp-route-id="@Model.Car?.Id">Book</a> }
            @if (Models.CurrentUser.IsAdmin) { <a asp-page="./Edit" asp-route-id="@Model.Car?.Id">Edit</a> }
            <a asp-page="./Index">Back to List</a>
        </div>
    </dl>
    <br>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert-danger">
            <strong>Error!</strong> @Model.ErrorMessage
            <button class="close alert" onclick="$(this).parent().remove();">Close</button>
        </div>
    }
</div>
